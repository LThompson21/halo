# .clang-format
BasedOnStyle: LLVM
Language: Cpp

# --- Indentation / tabs ---
IndentWidth: 3
ContinuationIndentWidth: 3
TabWidth: 3
UseTab: Never

# --- Parens spacing ---
SpacesInParentheses: true
SpaceInEmptyParentheses: false
SpacesInCStyleCastParentheses: true
SpaceAfterCStyleCast: true
SpaceBeforeParens: ControlStatements

# --- Braces ---
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true          # newline for normal functions
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
SpaceInEmptyBlock: false       # "{}" not "{ }"

# --- Keep short/no-brace statements on one line ---
AllowShortIfStatementsOnASingleLine: AllIfsAndElse
AllowShortLoopsOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: true
AllowShortBlocksOnASingleLine: Empty
AllowShortFunctionsOnASingleLine: All   # <- enables true one-liners like { return x; }
InsertBraces: false

# --- Wrapping / alignment ---
ColumnLimit: 120               # needed so long arg lists can wrap
BinPackArguments: false        # when wrapping, put one arg per line
BinPackParameters: false
AlignAfterOpenBracket: Align   # align to first argument
PenaltyBreakBeforeFirstCallParameter: 1  # encourage breaking before first arg once long
PenaltyBreakString: 50

# --- Alignment ---
DerivePointerAlignment: false
PointerAlignment: Right
ReferenceAlignment: Right

# --- Include sorting & grouping ---
SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^(<|")(win([[:alnum:]_]+)?\.h|windows\.h|dwmapi\.h|shellapi\.h|sh[a-z0-9_]*\.h|commctrl\.h|ole[a-z0-9_]*\.h|objbase\.h)("?>)$'
    Priority: 1
    SortPriority: 1
  - Regex: '^(<|")X11/.*("?>)$'
    Priority: 2
    SortPriority: 2
  - Regex: '^(<|")wayland-[a-z0-9_]+\.h("?>)$'
    Priority: 3
    SortPriority: 3
  - Regex: '^<([a-z0-9_]+|c[a-z0-9_]+)(\.h)?>$'
    Priority: 4
    SortPriority: 4
  - Regex: '^<[^">]*/[^">]*>$'
    Priority: 5
    SortPriority: 5
  - Regex: '^(<|")(halo/.*)("?>)$'
    Priority: 6
    SortPriority: 6
  - Regex: '^(<|")(private/.*)("?>)$'
    Priority: 7
    SortPriority: 7
  - Regex: '.*'
    Priority: 8
    SortPriority: 8

IncludeIsMainRegex: '([-_A-Za-z0-9]+)\.(h|hh|hpp|hxx)'
